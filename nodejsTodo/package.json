{
  "name": "postsearch_api",
  "version": "1.0.0",
  "description": "L'api de Post Search",
  "main": "index.js",
  "scripts": {
    "test": "./node_modules/.bin/mocha --require @babel/register",
    "clean": "rm -rf dist && mkdir dist",
    "build-babel": "babel ./server.js -d ./dist && babel ./src -s -d ./dist/src",
    "build": "npm run clean && npm run build-babel",
    "start": "npm run build && node ./dist/server.js",
    "start-DEBUGGER_CHROME": "npm run build && node --inspect=0.0.0.0 ./dist/server.js",
    "dev": "nodemon --exec babel-node server.js --inspect && p:w",
    "lint": "eslint . --fix",
    "p": "prettier --write 'src/**/*.js'",
    "p:w": "onchange 'src/**/*.js' -- prettier --write {{changed}}"
  },
  "author": "AymericJohn",
  "license": "ISC",
  "dependencies": {
    "apollo-server": "^2.14.2",
    "assert": "^2.0.0",
    "babel-eslint": "^10.1.0",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "graphql": "^14.6.0",
    "graphql-tools": "^4.0.7",
    "graphql-type-json": "^0.3.0",
    "mongodb": "^3.3.0-beta2",
    "morgan": "^1.9.1",
    "mysql": "^2.18.1",
    "onchange": "^6.1.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/node": "^7.5.5",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-transform-runtime": "^7.5.5",
    "@babel/polyfill": "^7.4.4",
    "@babel/preset-env": "^7.5.5",
    "@babel/runtime": "^7.9.2",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "mocha": "^7.1.1",
    "nodemon": "^1.19.1",
    "prettier": "2.0.2"
  }
}
